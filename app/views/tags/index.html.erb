<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_name' %>
      (<%= tag.articles.size %>)
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Tag", new_article_path, class: "new_tag" %>

<%= link_to "<< Back to Articles List", articles_path %>

